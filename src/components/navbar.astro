<style>
  html {
    scroll-behavior: smooth;
  }
  * {
    /* border: 1px solid red; */
    transition: all 0.3s ease;
    scroll-behavior: smooth;
  }
  
  button {
    background: transparent;
    border: none;
  }

  .mainNav {
    display: flex;
    position: fixed;
    overflow: hidden;
    width: 100vw;
    height: fit-content;
    z-index: 5;
    background-color: transparent;
    padding-top: 0.5%;
    padding-left: 0.5%;
  }

  @media only screen and (max-width: 720px) {
    .mainNav {
      display: none;
    }
  }

  .menu_button {
    width: 5.5%;
    align-items: center;
    justify-content: center;
    display: flex;
  }

  .buttons {
    width: 14%;
    margin-top: 0.75%;
    align-self: center;
    margin-left: 2.5%;
  }

  .menus {
    width: 100%;
    display: flex;
    align-items: center;
  }

  #menuInnerCircle, #menuRectangle {
    transform-origin: center;
    animation-fill-mode: forwards;
  }

  #homeButton {
    
    opacity: 0;
    z-index: -1;
  }

  #aboutButton {
    
    opacity: 0;
    z-index: -2;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }

    100% {
      opacity: 1;
    }
  }

  @keyframes fadeOut {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
</style>

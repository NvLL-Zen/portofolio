<script>
  const menuRectangle = document.getElementById("menuRectangle")
  const menuCircle = document.getElementById("menuInnerCircle")

  const homeButton = document.getElementById("homeButton")
  const aboutButton = document.getElementById("aboutButton")
  homeButton.style.transform = "translateX(-85%)"
  aboutButton.style.transform = "translateX(-210%)"
  let state = "closed";

  homeButton.addEventListener("click", () => {
    window.location.href = "#home_section"
  })
  
  aboutButton.addEventListener("click", () => {
    window.location.href = "#about_section"
  })

  const menu_button = document.getElementById("menu_button");
  menu_button.addEventListener("click", () => buttonToggle());
  menuCircle.style.opacity = "0"
  function buttonToggle() {
    if (state == "closed") {   
      menuRectangle.style.transform = "rotateZ(360deg)"
      menuRectangle.style.opacity = "0"

      menuCircle.style.opacity = "1"

      homeButton.style.transform = "translateX(0)"
      homeButton.style.opacity = "1"
      homeButton.style.zIndex = "1"

      aboutButton.style.transform = "translateX(0)"
      aboutButton.style.opacity = "1"
      aboutButton.style.zIndex = "1"

      state = "open";
    } else {
      menuRectangle.style.transform = "rotateZ(0deg)"
      menuRectangle.style.opacity = "1"


      menuCircle.style.opacity = "0"

      homeButton.style.transform = "translateX(-85%)"
      homeButton.style.opacity = "0"
      homeButton.style.zIndex = "-1"

      aboutButton.style.transform = "translateX(-210%)"
      aboutButton.style.opacity = "0"
      aboutButton.style.zIndex = "-2"

      state = "closed";
    }
  }
</script>
